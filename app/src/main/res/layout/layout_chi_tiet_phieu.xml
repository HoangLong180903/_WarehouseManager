<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="#f5f5f5"
    >
    <TextView
        android:id="@+id/ctphieu_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#31B95F"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textAlignment="center"
        android:text="Chi tiết phiếu"
        />
    <TextView
        android:id="@+id/ctphieu_tvNhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:text="Tạo bởi: "
        android:padding="10dp"
        android:textSize="16dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/ctphieu_tenDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Tên đơn vị: "
            android:padding="10dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ctphieu_sdtDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Số điện thoại: "
            android:padding="10dp"
            android:textSize="16dp"
            android:textColor="#31B95F"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/ctphieu_diaChiDonVi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Địa chỉ: "
            android:padding="10dp"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:text="Thông tin sản phẩm"
            android:padding="10dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ctphieu_imageSanPham"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/image_8"
                android:layout_margin="10dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/ctphieu_tenSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Tên sản phẩm: "
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ctphieu_soLuongSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Số lượng: "
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/ctphieu_giaTienSanPham"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:text="Giá tiền: "
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: "
            android:padding="10dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ctphieu_tongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="0 VNĐ"
            android:textColor="#FF0000"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đóng"
        android:textColor="#fff"
        android:layout_margin="10dp"
        android:backgroundTint="#67726B"
        android:id="@+id/ctphieu_btnDong"/>
</LinearLayout>