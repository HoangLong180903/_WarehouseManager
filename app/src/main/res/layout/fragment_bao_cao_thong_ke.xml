<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.BaoCaoThongKeFragment"
    android:background="#f5f5f5">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linear"
        android:background="@drawable/background_fragment"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:background="#E8E8E8"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="#fff"
                    android:gravity="center_horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon__archive_"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:text="Số phiếu nhập"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:id="@+id/bctk_tvSoLuongPhieuNhap"
                                android:layout_marginLeft="7dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="15dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="0.000.000"
                                android:textSize="16dp"
                                android:textStyle="bold"
                                android:textColor="#DD0606"
                                android:id="@+id/bctk_tvTongTienNhap"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textStyle="bold"
                                android:text="đ"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:layout_marginLeft="2dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:orientation="vertical"
                        android:layout_margin="7dp"
                        android:gravity="right"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Tổng doanh thu"
                                android:gravity="center_vertical"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:layout_marginLeft="7dp"/>
                            <ImageView
                                android:id="@+id/bctk_show_hide_tongDoanhThu"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/baseline_remove_red_eye_24_hide_password"
                                android:layout_marginLeft="7dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right">
                            <TextView
                                android:id="@+id/bctk_tvTongDoanhThu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="000.000.000"
                                android:textColor="#28B446"
                                android:inputType="textPassword"
                                android:textSize="16dp"
                                android:layout_marginLeft="7dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="đ"
                                android:textColor="#000000"
                                android:textSize="16dp"
                                android:layout_marginLeft="7dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="5dp"
                    >
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/icon__shopping_cart_"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Số phiếu xuất:"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:id="@+id/bctk_tvSoLuongPhieuXuat"
                        android:layout_marginLeft="7dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="0đ"
                        android:gravity="center_vertical"
                        android:textColor="#35C2C1"
                        android:textSize="16dp"
                        android:id="@+id/bctk_tvTongTienXuat"
                        android:layout_marginLeft="2dp"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


<!--        ton kho-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:background="#E8E8E8"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#FFF"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon__inventory_"
                    android:layout_margin="10dp"

                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:text="Số lượng tồn kho:"
                            android:textColor="#000000"
                            />
                        <TextView
                            android:id="@+id/bctk_tvTongSoLuongTon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:text="000"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:textColor="#FF9800"
                            />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="18.092.003 đ"
                        android:textColor="#35C2C1"
                        android:id="@+id/bctk_tvTongTienTonKho"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:id="@+id/imgThongKe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_date_range_24_today"
                android:layout_margin="5dp"/>
            <TextView
                android:id="@+id/bctk_tvNgayDau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="Từ ngày"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="->"/>
            <TextView
                android:id="@+id/bctk_tvNgayKetThuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="Đến ngày"/>
        </LinearLayout>
<!--      bieu do  xuat phieu -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:background="#E8E8E8"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#fff"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:id="@+id/bctk_tvTongTienHoaDon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="30.000.000 đ"
                        android:gravity="center_vertical"
                        android:textColor="#35C2C1"
                        android:textSize="18dp"
                        />

                    <TextView
                        android:id="@+id/bctk_tvTongPhieu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="10 Hóa Đơn"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:gravity="right"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0 đ"
                        android:gravity="center_vertical"
                        android:textColor="#FF0000"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0 Phiếu Trả"
                        android:gravity="center_vertical"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="000.000.000"
                            android:textColor="#28B446"
                            android:inputType="textPassword"
                            android:textSize="16dp"
                            android:layout_marginLeft="7dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="đ"
                            android:textColor="#000000"
                            android:textSize="16dp"
                            android:layout_marginLeft="7dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/thongke_bieuDoDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
<!--             view   bieu do -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:text="Doanh Thu bằng biểu đồ tổng giá trị phiếu xuất"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
            <!--    top 10 san pham -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                app:cardMaxElevation="20dp"
                android:background="#f5f5f5"
                android:layout_below="@+id/linear"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#fff"
                    android:padding="10dp"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Top 10 sản phẩm bán chạy"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/bctk_rcTop10SanPham"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </ScrollView>

</FrameLayout>